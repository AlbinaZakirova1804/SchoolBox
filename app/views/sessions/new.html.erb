<h1>LOGIN</h1>
<%= flash[:error] %>
  <%= form_with url: sessions_path, local: true do |f| %>

    <ul>
      <li>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </li>
      <br>
      <li>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </li>
    </ul>

    <%= f.submit "Log in" %>

  <% end %>
  <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
